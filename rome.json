{
    "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "security": {
                "noDangerouslySetInnerHtml": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "warn",
                "useButtonType": "warn"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 80,
        "ignore": []
    }
}
