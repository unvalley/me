{
  "name": "unvalley-me",
  "scripts": {
    "start": "next dev",
    "dev": "next dev",
    "build": "next build",
    "postbuild": "pnpm run sitemap && pnpm run rss",
    "sitemap": "cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-sitemap.mts",
    "rss": "cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mts",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "biome lint",
    "lint:fix": "biome lint --write --unsafe",
    "format": "biome format --write",
    "post:new": "node scripts/compose.mts"
  },
  "dependencies": {
    "@fontsource/ibm-plex-mono": "^5.2.6",
    "@fontsource/inter": "5.2.6",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^14.2.32",
    "@next/third-parties": "^15.5.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.22",
    "next": "^15.5.2",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "shiki": "^3.12.2",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@next/bundle-analyzer": "15.3.5",
    "@svgr/webpack": "^8.1.0",
    "@types/mdx": "^2.0.13",
    "@types/react": "^19.1.12",
    "cross-env": "^7.0.3",
    "globby": "14.1.0",
    "inquirer": "^12.9.4",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@9.15.1"
}
